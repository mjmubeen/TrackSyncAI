<Window x:Class="ShopifyOrderSync.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shopify Order Sync with AI Analysis" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
	<Grid Margin="20">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Title -->
		<TextBlock Grid.Row="0" Text="Shopify Order Synchronization"
                   FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

		<!-- Settings Section -->
		<GroupBox Grid.Row="1" Header="Settings" Padding="15" Margin="0,0,0,15">
			<Grid>
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="120"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="120"/>
				</Grid.ColumnDefinitions>

				<!-- Model Path -->
				<TextBlock Grid.Row="0" Grid.Column="0" Text="AI Model Path:"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
				<TextBox Grid.Row="0" Grid.Column="1" x:Name="ModelPathTextBox"
                         Margin="0,0,10,10" Padding="5"
                         Text="E:\AI-Models\Meta-Llama-3-8B-Instruct.Q4_K_M.gguf"/>
				<Button Grid.Row="0" Grid.Column="2" Content="Browse..."
                        Click="BrowseModel_Click" Margin="0,0,0,10" Padding="5"/>

				<!-- Model Status -->
				<TextBlock Grid.Row="1" Grid.Column="0" Text="Model Status:"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
				<TextBlock Grid.Row="1" Grid.Column="1" x:Name="ModelStatusTextBlock"
                           Text="Not Loaded" Foreground="Orange"
                           VerticalAlignment="Center" Margin="0,0,0,10"/>
				<Button Grid.Row="1" Grid.Column="2" x:Name="LoadModelButton"
                        Content="Load Model" Click="LoadModel_Click"
                        Margin="0,0,0,10" Padding="5"/>

				<!-- Memory Usage -->
				<TextBlock Grid.Row="2" Grid.Column="0" Text="Memory Used:"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
				<TextBlock Grid.Row="2" Grid.Column="1" x:Name="MemoryUsageTextBlock"
                           Text="0 MB" VerticalAlignment="Center"/>
			</Grid>
		</GroupBox>

		<!-- Date Range and Sync -->
		<GroupBox Grid.Row="2" Header="Sync Configuration" Padding="15" Margin="0,0,0,15">
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="200"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<TextBlock Grid.Column="0" Text="Start Date:"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
				<DatePicker Grid.Column="1" x:Name="StartDatePicker"
                            Margin="0,0,20,0" Padding="5"/>

				<TextBlock Grid.Column="2" Text="End Date:"
                           VerticalAlignment="Center" Margin="0,0,10,0"/>
				<DatePicker Grid.Column="3" x:Name="EndDatePicker"
                            Margin="0,0,20,0" Padding="5"/>

				<Button Grid.Column="5" x:Name="SyncButton" Content="Start Sync"
                        Click="SyncButton_Click" Padding="20,10"
                        FontSize="14" FontWeight="Bold"
                        Background="#4CAF50" Foreground="White"
                        BorderThickness="0" Cursor="Hand"/>
			</Grid>
		</GroupBox>

		<!-- Log Window -->
		<GroupBox Grid.Row="3" Header="Processing Log" Padding="10">
			<ScrollViewer VerticalScrollBarVisibility="Auto">
				<TextBox x:Name="LogTextBox" IsReadOnly="True"
                         TextWrapping="Wrap" FontFamily="Consolas"
                         FontSize="12" Background="#1E1E1E"
                         Foreground="#D4D4D4" BorderThickness="0"/>
			</ScrollViewer>
		</GroupBox>

		<!-- Status Bar -->
		<StatusBar Grid.Row="4" Margin="0,10,0,0">
			<StatusBarItem>
				<TextBlock x:Name="StatusTextBlock" Text="Ready"/>
			</StatusBarItem>
			<Separator/>
			<StatusBarItem>
				<ProgressBar x:Name="ProgressBar" Width="200" Height="16"
                             Minimum="0" Maximum="100" Value="0"/>
			</StatusBarItem>
			<StatusBarItem>
				<TextBlock x:Name="ProgressTextBlock" Text="0%"/>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>